<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.myapplication.MainActivity">
    <FrameLayout
        android:id="@+id/frame_fl"
        android:layout_width="match_parent"
        android:layout_height="480dp"
        >
        <android.support.v4.view.ViewPager
            android:id="@+id/fragment_viewpager"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </FrameLayout>
    <RadioGroup
        android:id="@+id/radio_group_rg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="510dp"

        >
        <RadioButton
            android:id="@+id/first_btn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:drawableTop="@drawable/radiobutton_selector"
            android:layout_weight="1"
            android:button="@null"
            android:checked="true"
            />
        <RadioButton
            android:id="@+id/second_btn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:drawableTop="@drawable/radiobutton_selector4"
            android:layout_weight="1"
            android:button="@null"
            />
        <RadioButton
            android:id="@+id/third_btn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:drawableTop="@drawable/radiobutton_selector3"
            android:layout_weight="1"
            android:button="@null"
            />
        <RadioButton
            android:id="@+id/forth_btn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:drawableTop="@drawable/radiobutton_selector2"
            android:layout_weight="1"
            android:button="@null"
            />
    </RadioGroup>
</RelativeLayout>
