<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>
	 <style 
	    name="TextViewOne"
	    >
	    <item name="android:layout_width">match_parent</item>
	    <item name="android:layout_height">wrap_content</item>
	    <item name="android:textSize">20sp</item>
	   <item name="android:textStyle">bold</item>
	</style> 
	<!-- <style name="TextViewTwo">
	    <item name="android:width">wrap_content</item>
	    <item name="android:height">wrap_content</item>
	</style>
	<style name="TextViewThree" parent="TextViewOne">
	    
	</style> -->
	<style name="TextViewStyle">
	    <item name="android:layout_width">match_parent</item>
	    <item name="android:layout_height">wrap_content</item>
	    <item name="android:gravity">center</item>
	    <item name="android:textSize">15sp</item>
	    <item name="android:textColor">#880055</item>
	</style>
	
	<!-- 自定义样式继承TextViewStyle -->
	<style name="MyTextView" parent="TextViewStyle">
	    <item name="android:textSize">18sp</item>
	    <item name="android:background">#909090</item>
	</style>
</resources>
