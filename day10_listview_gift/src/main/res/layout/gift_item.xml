<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ImageView
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:id="@+id/image_icon_iv"
        android:src="@mipmap/ic_launcher"
        android:scaleType="centerCrop"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/image_icon_iv"
        android:textSize="18sp"
        android:text="Game Name"
        android:id="@+id/game_name_tv"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:id="@+id/gift_name_tv"
        android:text="Gift Name"
        android:layout_toRightOf="@id/image_icon_iv"
        android:layout_below="@id/game_name_tv"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:id="@+id/number_tv"
        android:layout_toRightOf="@id/image_icon_iv"
        android:text="剩余：50"
        android:layout_alignBottom="@id/image_icon_iv"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:id="@+id/add_time_tv"
        android:layout_toRightOf="@id/number_tv"
        android:text="时间：2016-1-1"
        android:layout_marginLeft="10dp"
        android:layout_alignBottom="@id/image_icon_iv"/>
</RelativeLayout>