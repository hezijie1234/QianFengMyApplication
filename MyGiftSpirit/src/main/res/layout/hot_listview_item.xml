<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="90dp">

    <ImageView
        android:layout_centerVertical="true"
        android:id="@+id/hot_lv_iv"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginLeft="5dp"
        android:src="@mipmap/startsys_right"
        android:scaleType="centerCrop"/>
    <TextView
        android:id="@+id/hot_lv_gname"
        android:layout_marginTop="5dp"
        android:textSize="20sp"
        android:layout_toRightOf="@id/hot_lv_iv"
        android:layout_width="wrap_content"
        android:layout_marginLeft="5dp"
        android:textStyle="bold"
        android:layout_height="wrap_content"
        android:text="传奇世界手游"/>
    <TextView
        android:id="@+id/hot_lv_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/hot_lv_iv"
        android:layout_below="@id/hot_lv_gname"
        android:textSize="15sp"
        android:layout_marginLeft="5dp"
        android:text="运营商：腾讯游戏"/>
    <TextView
        android:id="@+id/hot_lv_size"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="大小300M"
        android:textSize="15sp"
        android:layout_marginLeft="5dp"
        android:layout_marginBottom="5dp"
        android:layout_toRightOf="@id/hot_lv_iv"
        android:layout_alignParentBottom="true"
        />
    <TextView
        android:id="@+id/hot_online_num"
        android:layout_width="wrap_content"
        android:text="在线人数"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:textSize="15sp"
        android:layout_height="wrap_content" />
</RelativeLayout>