<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="70dp">
    <ImageView
        android:layout_centerVertical="true"
        android:id="@+id/start_sys_left_iv"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:scaleType="centerCrop"
        android:src="@mipmap/_1478655079153"
        />
    <TextView
        android:id="@+id/startsys_left_gname_tv"
        android:layout_marginTop="5dp"
        android:textSize="15sp"
        android:layout_toRightOf="@id/start_sys_left_iv"
        android:layout_width="wrap_content"
        android:layout_marginLeft="5dp"
        android:textStyle="bold"
        android:layout_height="wrap_content"
        android:text="屠龙霸者"/>
    <ImageView
        android:id="@+id/startsys_left_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/g_biao"
        android:scaleType="centerCrop"
        android:layout_marginLeft="5dp"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@id/start_sys_left_iv"
        />
    <TextView
        android:id="@+id/startsys_left_addtime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@id/startsys_left_image"
        android:textColor="#00ff00"
        android:text="01-10 10:00 "/>
    <TextView
        android:id="@+id/startsys_left_operators"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:textStyle="bold"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@id/start_sys_left_iv"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="5dp"
        android:text="运营商：7k7k"/>
    <TextView
        android:id="@+id/start_sys_left_area"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="39服"/>
    <Button
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:background="#00ff00"
        android:textColor="#ffffff"
        android:textSize="12sp"
        android:layout_width="50dp"
        android:layout_height="25dp"
        android:focusable="false"
        android:text="查看"/>
</RelativeLayout>