<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context="com.example.myapplication.DetailsActivity">
    <FrameLayout
        android:id="@+id/frame"
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:background="@mipmap/lb_bg"
        >

        <circleimageview.CircleImageView
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_gravity="top"
            android:id="@+id/image_bg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@mipmap/m_wode"
            android:paddingTop="20dp"
            />
        <!--<ImageView
            android:layout_gravity="top"
            android:id="@+id/image_bg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@mipmap/ic_launcher"
            android:paddingTop="20dp"
            />-->

        <TextView
            android:id="@+id/overtime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:text="有效期：1900-12-1"
            />
        <TextView
            android:id="@+id/number_gift"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="礼包剩余：100"
            android:layout_gravity="bottom|right"

            />
    </FrameLayout>
    <TextView
        android:id="@+id/gift_explain"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/frame"
        android:text="礼包说明"
        android:textStyle="bold"
        style="?android:attr/listSeparatorTextViewStyle"
        />
    <TextView
        android:id="@+id/gift_explain_detail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="礼包详细信息"
        android:layout_below="@id/gift_explain"
        android:paddingLeft="7dp"
        />
    <TextView
        android:id="@+id/gift_get_method"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/gift_explain_detail"
        android:text="兑换方式"
        android:textStyle="bold"
        style="?android:attr/listSeparatorTextViewStyle"
        />
    <TextView
        android:id="@+id/gift_get_detail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="游戏内领取"
        android:layout_below="@id/gift_get_method"
        android:paddingLeft="7dp"
        />
    <Button
        android:id="@+id/get_now"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="立即领取"
        android:background="#66CDAA"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        />
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/my_gift_green"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:padding="10dp"/>
</RelativeLayout>
